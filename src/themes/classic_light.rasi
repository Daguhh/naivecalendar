* {
    nord8: 	        #88c0d0;	
    nord15: 	    #b48ead;	
    blue:           #56769E;
    dark1:                       #1F1F1F;
    white1:                      #FFFFFF;
    red:                         #fd0e35;
    foreground:                  @dark1;
    background:                  @white1;
    foreground-normal:           @foreground;
    background-normal:           @background;
    foreground-urgent:           @nord8;
    background-urgent:           @background-normal;
    foreground-active:           @red;
    background-active:           @background;
    foreground-select:           @white1;
    background-select:           @red;
    border:                      @nord15;
    lightbg:                     #434c5e;
}
#window {
    fullscreen:             false;
    hide-scrollbar:         true;
    line-padding:           10;
    padding:                10px;
    width:                  300px;
    x-offset:               -3%;
    y-offset:               4%;
    border-color:           @blue;
    background-color:       @background;
    text-color:             @foreground;
}
#mainbox {
    border:  0;
    padding: 0;
    background-color:   @background;
}
#message {
    border-color: @background;
    padding:      1px ;
    background-color:   @background;
}
#textbox {
    text-color: @foreground;
    background-color:   @background;
}
#listview {
    fixed-height: 0;
    border:       2px 0px 0px ;
    border-color: @background;
    background-color:   @background;
    spacing:      3px;
    scrollbar:    false;
    padding:      1px 1px 1px ;
    columns:      7;
    lines:        8;
}
#element {
    border:  0;
    padding: 8px 0px 0px ;
    background-color:   @background;
    horizontal-align: true;
}
#element.normal.normal {
    background-color: @background-normal;
    text-color:       @foreground-normal;
}
#element.normal.urgent {
    background-color: @background-urgent;
    text-color:       @foreground-urgent;
}
#element.normal.active {
    background-color: @background-active;
    text-color:       @foreground-active;
}
#element.selected.normal {
    background-color: @background-select;
    text-color:       @foreground-select;
}
#element.selected.urgent {
    background-color: @background-select;
    text-color:       @foreground-select;
}
#element.selected.active {
    background-color: @background-select;
    text-color:       @foreground-select;
}
#element.alternate.normal {
    background-color: @background-normal;
    text-color:       @foreground-normal;
}
#element.alternate.urgent {
    background-color: @background-urgent;
    text-color:       @foreground-urgent;
}
#element.alternate.active {
    background-color: @background-active;
    text-color:       @foreground-active;
}
#mode-switcher {
    border:       0px 0px 0px ;
    border-color: @background;
    foreground-color:   @background;
    background-color:   @background;
}
#button {
    spacing:    0;
    text-color: @foreground;
    background-color:   @background;
}
#button.selected {
    background-color: @background;
    text-color:       @foreground;
}
#inputbar {
    spacing:    0;
    text-color: @foreground;
    padding:    1px ;
    background-color:   @background;
}
#case-indicator {
    spacing:    0;
    text-color: @foreground;
    background-color:   @background;
}
#entry {
    spacing:    0;
    text-color: @foreground;
    background-color:   @background;
}
#prompt {
    spacing:    0;
    text-color: @foreground;
    background-color:   @background;
}
#inputbar {
    children:   [ prompt,textbox-prompt-colon,entry,case-indicator ];
}
#textbox-prompt-colon {
    expand:     false;
    str:        ":";
    margin:     0px 0.3em 0em 0em ;
    text-color: @foreground;
    background-color:   @background;
}
